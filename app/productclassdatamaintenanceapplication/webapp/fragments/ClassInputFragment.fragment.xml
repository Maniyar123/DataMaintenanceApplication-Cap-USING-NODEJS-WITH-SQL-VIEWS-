<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
<Dialog id="classInputDialog" title="Class Dialog" draggable="true" contentHeight="200px">
<content>
    <VBox class="sapUiSmallMargin" >
        <!-- Class input fields with labels -->
        <Label text="Class ID:" labelFor="classIdInput" design="Bold"/>
        <Input id="classIdInput" width="100%" class="sapUiSmallMarginBottom"/>
        
        <Label text="Class Name:" labelFor="classNameInput" design="Bold"/>
        <Input id="classNameInput" width="100%" class="sapUiSmallMarginBottom" />
        
    </VBox>
    
      <!-- <Button text="Save Class" press="onSaveClasses" /> -->
      
    </content>
    <beginButton>
            <Button
                text="Save Class"
                press="onSaveClasses"
                type="Success"
                />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelClassDialog"
                type="Reject"
                />
        </endButton>
    </Dialog>
    
</core:FragmentDefinition>

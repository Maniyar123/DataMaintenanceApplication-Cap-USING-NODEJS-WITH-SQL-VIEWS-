
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
<Dialog title="Product Data" id="productInputDialog" draggable="true" contentHeight="270px">
<content>
    <VBox class="sapUiSmallMargin">
        <!-- Product input fields with labels -->
            <Label text="Product Id:" labelFor="productIdInput" design="Bold" />
            <Input id="productIdInput" width="100%" class="sapUiSmallMarginBottom"/>
            
            <Label text="Product Name:" labelFor="productNameInput" design="Bold"/>
            <Input id="productNameInput" width="100%" class="sapUiSmallMarginBottom"/>
            
            <Label text="Type:" labelFor="productTypeInput" design="Bold"/>
            <Input id="productTypeInput" width="100%" class="sapUiSmallMarginBottom"/>
            
            <!-- <Button text="Save Product" press="onSaveProducts" /> -->
    </VBox>
    </content>
    <beginButton>
            <Button
                text="Save Product"
                press="onSaveProducts"
                type="Success"
                />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelProductDialog"
                type="Reject"
                />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
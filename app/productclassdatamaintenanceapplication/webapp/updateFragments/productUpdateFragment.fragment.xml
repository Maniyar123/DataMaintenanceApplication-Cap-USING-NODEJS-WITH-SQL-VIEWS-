<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Product Data" id="productEditDialog" draggable="true" contentHeight="300px">
        <content>
           <VBox class="sapUiSmallMargin">
        <!-- Product input fields with labels -->
            <Label text="Product Id:" labelFor="productIdUpdateInput" design="Bold" />
            <Input id="productIdUpdateInput" width="100%" class="sapUiSmallMarginBottom"/>
            
            <Label text="Product Name:" labelFor="productNameUpdateInput" design="Bold"/>
            <Input id="productNameUpdateInput" width="100%" class="sapUiSmallMarginBottom"/>
            
            <Label text="Type:" labelFor="productTypeUpdateInput" design="Bold"/>
            <Input id="productTypeUpdateInput" width="100%" class="sapUiSmallMarginBottom"/>
            
            <!-- <Button text="Save Product" press="onSaveProducts" /> -->
    </VBox>
    </content>
    <beginButton>
            <Button
                text="Save Product"
                press="onSaveUpdateProducts"
                type="Success"
                />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelUpdateProductDialog"
                type="Reject"
                />
        </endButton>

            </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:m="sap.m">
    <m:Dialog id="charDialog" title="Characteristics" resizable="true" draggable="true" contentWidth="600px" contentHeight="400px">
        <!-- Search Bar for filtering characteristics -->
        <m:SearchField width="100%" placeholder="Class/Char Name, Char Value" liveChange="onFilterCharacteristics" />
        
        <!-- Vertical Box to Hold Dynamic Panels for Each Class -->
        <m:VBox id="charVBox">
            <!-- Panels for each class will be dynamically created here in the controller -->
        </m:VBox>
        
        <!-- Submit and Close Buttons in the footer bar -->
        <m:Bar >
            <m:Button text="Submit" type="Accept" press="onSubmitCharDialog" />
            <m:Button text="Close" type="Reject" press="onCloseCharDialog" />
        </m:Bar>
    </m:Dialog>
</core:FragmentDefinition>

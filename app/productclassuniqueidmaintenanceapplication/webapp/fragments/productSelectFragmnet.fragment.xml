<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="valueHelpDialog"
        title="Select Product"
       >
        
        <List
            id="valueHelpList"
            items="{
                path: '/product'
            }">
            <items>
                <StandardListItem 
                    title="{productName}" 
                    description="{productID}"
                    type="Active"
                    press="onSelectProduct"/>
            </items>
        </List>

        <beginButton>
            <Button text="Close" press="onValueHelpDialogClose" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>

<mvc:View controllerName="com.productclassuniqueidmaintenanceapplication.controller.ListView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">

    <f:DynamicPage id="dynamicPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Product Class Unique ID Maintenance" />
                </f:heading>
               
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <Toolbar class="productToolbar">
                    <!-- Search Field -->
                    <SearchField
                        id="searchField"
                        width="100%"
                        placeholder="Search Unique ID / Description"
                        liveChange="onUniqueIDSearch" />

                    <!-- Product Name Input with Value Help -->
                    <Input
                        id="productNameField"
                        value="{/selectedProduct/productName}"
                        placeholder="Select Product"
                        showValueHelp="true"
                        valueHelpRequest="onValueHelpProduct"
                        class="sapUiSmallMarginStart"
                        width="100%" />

                    <!-- Create Button -->
                    <Button
                        text="Create"
                        press="onCreate"
                        icon="sap-icon://add"
                        class="sapUiSmallMarginStart"
                        type="Success" />
                </Toolbar>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table id="productTable" inset="true" items="{/product}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Product List" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Unique ID" />
                    </Column>
                    <Column>
                        <Text text="Description" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                       <Text text="Valid From" />
                    </Column>
                    <Column>
                        <Text text="Valid To" />
                    </Column>
                    <Column>
                        <Text text="Actions" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onRowSelected">
                        <cells>
                            <ObjectIdentifier title="{uniqueID}" />
                            <Text text="{description}" />
                            <Switch 
                                state="{= ${status}.toLowerCase() === 'active' }" 
                                change="onSwitchChange" />
                                 
                                <Text text="{validFrom}" />  <!-- Ensure this matches your model property -->
                                <Text text="{validTo}" />    <!-- Ensure this matches your model property -->
                            <HBox>
                                <Button icon="sap-icon://edit" press="onEditProductListView" type="Success" class="sapUiSmallMarginEnd" />
                                <Button icon="sap-icon://delete" press="onDeleteProductListView" type="Reject" class="sapUiSmallMarginEnd" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
